@{
    Layout = null;
}
<!DOCTYPE html>
<html lang="vi">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Đăng Nhập</title>
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css" />
    <style>
        body {
            font-family: Arial, sans-serif;
            display: flex;
            justify-content: center;
            align-items: center;
            height: 100vh;
            margin: 0;
            position: relative;
        }

            body::before {
                content: "";
                position: fixed;
                top: 0;
                left: 0;
                width: 100%;
                height: 100%;
                background: url('/images/ungbuou.png') no-repeat center center fixed;
                background-size: cover;
                opacity: 0.6;
                z-index: -1;
            }

        .login-container {
            background-color: rgba(255, 255, 255, 0.95);
            padding: 40px;
            border-radius: 10px;
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
            width: 100%;
            max-width: 400px;
            z-index: 1;
        }

            .login-container h2 {
                margin-bottom: 20px;
                color: #333;
                text-align: center;
            }

        .form-group label {
            font-weight: bold;
        }

        .btn-login {
            background-color: #4CAF50;
            color: white;
            font-weight: bold;
        }

            .btn-login:hover {
                background-color: #45a049;
            }

        .alert {
            margin-bottom: 15px;
        }
    </style>
</head>
<body>
    <div class="login-container">
        <h2>Đăng Nhập</h2>

        @if (ViewBag.LoginError != null)
        {
            <div class="alert alert-danger">@ViewBag.LoginError</div>
        }

        <form action="@Url.Action("Login", "Auth")" method="post">
            <div class="form-group">
                <label for="email">Email</label>
                <input type="email" class="form-control" name="email" id="email" required />
            </div>
            <div class="form-group">
                <label for="matKhau">Mật khẩu</label>
                <input type="password" class="form-control" name="matKhau" id="matKhau" required />
            </div>
            <button type="submit" class="btn btn-login btn-block">Đăng Nhập</button>
        </form>
    </div>
</body>
</html>

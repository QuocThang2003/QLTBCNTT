@{
    ViewBag.Title = "Đặt lại mật khẩu";
    Layout = null;
}

<!DOCTYPE html>
<html lang="vi">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>@ViewBag.Title</title>
    <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@400;600&display=swap" rel="stylesheet" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" />
    <style>
        :root {
            --accent: #4CAF50;
            --accent-hover: #43a047;
            --text-color: #333;
        }

        * {
            box-sizing: border-box;
            margin: 0;
            padding: 0;
        }

        body {
            font-family: 'Poppins', sans-serif;
            min-height: 100vh;
            display: flex;
            justify-content: center;
            align-items: center;
            background-color: #f0f2f5;
            position: relative;
            overflow: hidden;
        }

            body::before {
                content: "";
                position: fixed;
                inset: 0;
                background: url('/images/ungbuou.png') no-repeat center center fixed;
                background-size: cover;
                filter: brightness(0.6) blur(3px);
                transform: scale(1.05);
                z-index: -2;
                animation: bgZoom 30s ease-in-out infinite alternate;
            }

        @@keyframes bgZoom {
            to {
                transform: scale(1.08);
            }
        }

        body::after {
            content: "";
            position: fixed;
            inset: 0;
            background-image: radial-gradient(circle, rgba(255,255,255,0.3) 1px, transparent 1px), radial-gradient(circle, rgba(255,255,255,0.15) 1px, transparent 1px);
            background-size: 80px 80px, 120px 120px;
            animation: sparkle 20s linear infinite;
            z-index: -1;
            pointer-events: none;
        }

        @@keyframes sparkle {
            0% {
                background-position: 0 0, 0 0;
            }

            100% {
                background-position: 100px 200px, -100px 100px;
            }
        }

        .container {
            background: rgba(255, 255, 255, 0.95);
            border-radius: 1rem;
            padding: 2.5rem 2rem;
            box-shadow: 0 8px 30px rgba(0,0,0,0.2);
            width: 90%;
            max-width: 400px;
            text-align: center;
            position: relative;
            z-index: 1;
        }

        .logo {
            width: 80px;
            margin: 0 auto 1.5rem;
            display: block;
        }

        h2 {
            margin-bottom: 1.5rem;
            font-size: 1.75rem;
            color: var(--text-color);
        }

        .input-group {
            position: relative;
            margin-bottom: 1.5rem;
        }

            .input-group input {
                width: 100%;
                padding: 1rem;
                padding-right: 3rem;
                font-size: 1rem;
                border: 1px solid #ccc;
                border-radius: 0.75rem;
                background: #fff;
                transition: all 0.3s;
            }

                .input-group input:focus {
                    border-color: var(--accent);
                    outline: none;
                }

            .input-group label {
                position: absolute;
                left: 1rem;
                top: 50%;
                transform: translateY(-50%);
                background: #fff;
                padding: 0 0.3rem;
                color: #999;
                transition: 0.2s;
                pointer-events: none;
            }

            .input-group input:focus + label,
            .input-group input:not(:placeholder-shown) + label {
                top: -0.6rem;
                font-size: 0.75rem;
                color: var(--accent);
            }

            .input-group i {
                position: absolute;
                right: 1rem;
                top: 50%;
                transform: translateY(-50%);
                color: #aaa;
            }

        input[type="submit"] {
            width: 100%;
            padding: 0.75rem;
            font-size: 1rem;
            border: none;
            border-radius: 0.75rem;
            background: var(--accent);
            color: #fff;
            cursor: pointer;
            transition: background 0.3s;
        }

            input[type="submit"]:hover {
                background: var(--accent-hover);
            }

        .notification {
            margin-bottom: 1rem;
            padding: 0.75rem;
            border-radius: 0.5rem;
            font-size: 0.95rem;
        }

            .notification.error {
                background-color: #f44336;
                color: #fff;
            }
    </style>
</head>
<body>
    <div class="container">
        <img src="~/images/logo.png" alt="Logo" class="logo" />
        <h2>Đặt lại mật khẩu</h2>

        @if (ViewBag.Error != null)
        {
            <div class="notification error">@ViewBag.Error</div>
        }

        <form asp-action="ResetPassword" asp-controller="Auth" method="post">
            <input type="hidden" name="token" value="@ViewBag.Token" />

            <div class="input-group">
                <input type="password" name="newPassword" placeholder=" " required />
                <label>Mật khẩu mới</label>
                <i class="fa fa-lock"></i>
            </div>

            <div class="input-group">
                <input type="password" name="confirmPassword" placeholder=" " required />
                <label>Xác nhận mật khẩu</label>
                <i class="fa fa-lock"></i>
            </div>

            <input type="submit" value="Đặt lại mật khẩu" />
        </form>
    </div>
</body>
</html>

@model QLTBCNTT.Models.ChiTietPhieuXuat

@{
    ViewData["Title"] = "Chỉnh sửa chi tiết phiếu xuất";
}

<h2>@ViewData["Title"]</h2>

<form asp-action="Edit">
    <input type="hidden" asp-for="MaChitietxuat" />
    <div class="form-group">
        <label>Mã phiếu xuất</label>
        <select asp-for="MaPhieuxuat" class="form-control" asp-items="ViewBag.MaPhieuxuat"></select>
    </div>
    <div class="form-group">
        <label>Thiết bị</label>
        <select asp-for="MaThietbi" class="form-control" asp-items="ViewBag.MaThietbi"></select>
    </div>
    <div class="form-group">
        <label>Số lượng</label>
        <input asp-for="SoLuong" class="form-control" />
    </div>
    <button type="submit" class="btn btn-success">Cập nhật</button>
    <a asp-action="Index" class="btn btn-secondary">Trở về</a>
</form>
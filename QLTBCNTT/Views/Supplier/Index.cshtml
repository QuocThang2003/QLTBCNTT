@model IEnumerable<QLTBCNTT.Models.NhaCungCap>

@{
    ViewData["Title"] = "Danh sách Nhà Cung Cấp";
}

<h2 class="mb-4 text-primary fw-bold">@ViewData["Title"]</h2>

<a asp-action="Create" class="btn btn-success mb-3 shadow-sm">
    <i class="fas fa-plus me-2"></i> Thêm nhà cung cấp mới
</a>

<div class="card shadow-sm rounded-3">
    <div class="card-body p-3">
        <div class="table-responsive">
            <table class="table table-hover table-bordered align-middle mb-0">
                <thead class="table-light text-center">
                    <tr>
                        <th style="width: 50px;">STT</th>
                        <th>Tên Nhà Cung Cấp</th>
                        <th style="width: 140px;">Số điện thoại</th>
                        <th style="width: 180px;">Hành động</th>
                    </tr>
                </thead>
                <tbody>
                    @if (Model != null && Model.Any())
                    {
                        foreach (var item in Model)
                        {
                            <tr>
                                <td class="text-center fw-semibold">@item.MaNcc</td>
                                <td>@item.TenNcc</td>
                                <td>@item.Sdt</td>
                                <td class="text-center">
                                    <a asp-action="Edit" asp-route-id="@item.MaNcc" class="btn btn-sm btn-warning me-2" title="Sửa">
                                        <i class="fas fa-edit"></i> Sửa
                                    </a>
                                    <a asp-action="Delete" asp-route-id="@item.MaNcc" class="btn btn-sm btn-danger" title="Xóa">
                                        <i class="fas fa-trash-alt"></i> Xóa
                                    </a>
                                </td>
                            </tr>
                        }
                    }
                    else
                    {
                        <tr>
                            <td colspan="4" class="text-center text-muted fst-italic">Chưa có nhà cung cấp nào.</td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>

@section Scripts {
    <script src="https://kit.fontawesome.com/a076d05399.js" crossorigin="anonymous"></script>
}

<style>
    /* Tùy chọn: căn giữa và căn dòng đẹp hơn cho nội dung bảng */
    table th, table td {
        vertical-align: middle;
    }
</style>

@model QLTBCNTT.Models.ChiTietPhieuNhap

@{
    ViewData["Title"] = "Xóa Chi tiết Phiếu nhập";
}

<h2>Xóa Chi tiết Phiếu nhập</h2>

<h3>Bạn có chắc chắn muốn xóa không?</h3>

<div>
    <p><strong>Phiếu nhập:</strong> @Model.MaPhieunhapNavigation?.MaPhieunhap</p>
    <p><strong>Thiết bị:</strong> @Model.MaThietbiNavigation?.TenThietbi</p>
    <p><strong>Số lượng:</strong> @Model.SoLuong</p>
</div>

<form asp-action="Delete">
    <input type="hidden" asp-for="MaChitietnhap" />
    <button type="submit" class="btn btn-danger">Xóa</button>
    <a asp-action="Index" class="btn btn-secondary">Hủy</a>
</form>

@model QLTBCNTT.Models.BaoTri

@{
    ViewData["Title"] = "Chi tiết bảo trì";
}

<h2 class="text-center my-4">Chi tiết bảo trì</h2>

<div>
    <dl class="row">
        <dt class="col-sm-2">Thiết bị</dt>
        <dd class="col-sm-10">@Model.MaThietbiNavigation?.TenThietbi</dd>

        <dt class="col-sm-2">Ngày bảo trì</dt>
        <dd class="col-sm-10">@Model.NgayBaotri</dd>

        <dt class="col-sm-2">Ngày hoàn thành</dt>
        <dd class="col-sm-10">@Model.NgayHoanthanh</dd>

        <dt class="col-sm-2">Loại bảo trì</dt>
        <dd class="col-sm-10">@Model.LoaiBaotri</dd>

        <dt class="col-sm-2">Trạng thái</dt>
        <dd class="col-sm-10">@Model.TrangThai</dd>

        <dt class="col-sm-2">Người phụ trách</dt>
        <dd class="col-sm-10">@Model.NguoiPhuTrachNavigation?.HoTen</dd>
    </dl>
</div>
<a asp-action="Edit" asp-route-id="@Model.MaBaotri" class="btn btn-warning">Sửa</a>
<a asp-action="Index" class="btn btn-secondary">Quay lại</a>

@model IEnumerable<QLTBCNTT.Models.DanhMuc>

@{
    ViewData["Title"] = "Category List";
}

<h2 class="mb-4 text-primary fw-bold">@ViewData["Title"]</h2>

<a asp-action="Create" class="btn btn-success mb-3 shadow-sm">
    <i class="fas fa-plus me-1"></i> Thêm danh mục
</a>

<div class="card shadow-sm">
    <div class="card-body">
        <table class="table table-bordered table-hover text-center align-middle">
            <thead class="table-light">
                <tr>
                    <th style="width: 80px;">ID</th>
                    <th>Danh mục</th>
                    <th style="width: 200px;">Actions</th>
                </tr>
            </thead>
            <tbody>
                @if (Model.Any())
                {
                    foreach (var item in Model)
                    {
                        <tr>
                            <td>@item.MaDanhmuc</td>
                            <td class="text-start">@item.TenDanhmuc</td>
                            <td>
                                <a asp-action="Edit" asp-route-id="@item.MaDanhmuc" class="btn btn-warning btn-sm me-1">
                                    <i class="fas fa-edit"></i> Edit
                                </a>
                                <a asp-action="Delete" asp-route-id="@item.MaDanhmuc" class="btn btn-danger btn-sm">
                                    <i class="fas fa-trash-alt"></i> Delete
                                </a>
                            </td>
                        </tr>
                    }
                }
                else
                {
                    <tr>
                        <td colspan="3" class="text-muted fst-italic">No categories available.</td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>
